<h1>Edit Article</h1>

<form action="/articles/<%= @article.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <p><label for="title">Title</label>
  <input id="title" type="text" name="article[title]" value="<%= @article.title %>">
  
  <p><label for="content">Content</label>
  <textarea id="content" type="text" name="article[content]"><%= @article.content %></textarea></p>
  <input type="submit" value='submit'>
</form>

<hr>
<p><a href="/articles">All Articles</a></p>

